{
    "extends": "airbnb",
	"parser": "babel-eslint",
	"parserOptions": {
		"sourceType": "module",
		"allowImportExportEverywhere": false
	},
	"plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "rules": {
    	"react/prefer-stateless-function": "off",
    	"max-len": 0,
    	"arrow-body-style": 1,
    	"camelcase": 0
    }
}