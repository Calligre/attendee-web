{
    "extends": "airbnb",
    "plugins": [
        "react",
        "jsx-a11y",
        "import"
    ],
    "settings": {
        "import/parser": "babel-eslint",
        "import/resolver": {
            "webpack": {
                "config": "webpack.config.js"
            }
        }
    },
    "env": {
        "browser": true,
        "node": true
    },

    "parser": "babel-eslint",
    "parserOptions": {
    "sourceType": "module",
        "allowImportExportEverywhere": false
    },
    "rules": {
        //These rules are in place because eslint import resolver webpack refuses to do its job
        "import/no-unresolved": 0,
        "import/no-extraneous-dependencies": 0,
        "import/extensions": 0,
        "jsx-a11y/no-static-element-interactions": 0,
        "react/jsx-boolean-value": 0,
        "react/no-multi-comp": 0
    }
}
